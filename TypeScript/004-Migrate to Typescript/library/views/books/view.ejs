<%- include('../port/main-start', {title: title}) %>
<%- include('../port/menu') %>
<h1><%= title %></h1>
<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                    <h5 class="card-title">Название: <%= books.title %></h5>
                    <p class="card-text">Описание: <%= books.description %></p>
                    <p class="card-text"> Автор: <%= books.authors %></p>
                    <p class="card-text">В избранном: <%= books.favorite %></p>
                    <p class="card-text">Имя файла: <%= books.fileName %></p>
                    <p class="card-text">Просмотров: <%= count %></p>
                    <div class="text-right">
                        <% if(books.fileCover){ %>
                            <a class="btn btn-sm btn-primary" href="/books/download/<%= books.id %>">
                                <i class="fa fa-download" aria-hidden="true"></i>
                            </a>
                        <%} %>
                        <a class="btn btn-sm btn-primary" href="/books/update/<%= books.id %>">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <form action="/books/delete/<%= books.id %>" method="POST" class="d-inline">
                            <button class="btn btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>
<%- include('../port/main-end') %>